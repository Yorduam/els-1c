
Процедура Печать(ТабДок, Ссылка) Экспорт
	//{{_КОНСТРУКТОР_ПЕЧАТИ(Печать)
	Макет = Документы.НазначениеДипломнойРаботы.ПолучитьМакет("Печать");
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	НазначениеДипломнойРаботы.Автор,
	|	НазначениеДипломнойРаботы.Группа,
	|	НазначениеДипломнойРаботы.Дата,
	|	НазначениеДипломнойРаботы.Номер,
	|	НазначениеДипломнойРаботы.Обучающиеся.(
	|		НомерСтроки,
	|		ФИО,
	|		Тема,
	|		НаПримере,
	|		Руководитель
	|	)
	|ИЗ
	|	Документ.НазначениеДипломнойРаботы КАК НазначениеДипломнойРаботы
	|ГДЕ
	|	НазначениеДипломнойРаботы.Ссылка В (&Ссылка)";
	Запрос.Параметры.Вставить("Ссылка", Ссылка);
	Выборка = Запрос.Выполнить().Выбрать();

	ОбластьЗаголовок = Макет.ПолучитьОбласть("Заголовок");
	Шапка = Макет.ПолучитьОбласть("Шапка");
	ОбластьОбучающиесяШапка = Макет.ПолучитьОбласть("ОбучающиесяШапка");
	ОбластьОбучающиеся = Макет.ПолучитьОбласть("Обучающиеся");
	Подвал = Макет.ПолучитьОбласть("Подвал");

	ТабДок.Очистить();

	ВставлятьРазделительСтраниц = Ложь;
	Пока Выборка.Следующий() Цикл
		Если ВставлятьРазделительСтраниц Тогда
			ТабДок.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;

		ТабДок.Вывести(ОбластьЗаголовок);

		Шапка.Параметры.Заполнить(Выборка);
		ТабДок.Вывести(Шапка, Выборка.Уровень());

		ТабДок.Вывести(ОбластьОбучающиесяШапка);
		ВыборкаОбучающиеся = Выборка.Обучающиеся.Выбрать();
		Пока ВыборкаОбучающиеся.Следующий() Цикл
			ОбластьОбучающиеся.Параметры.Заполнить(ВыборкаОбучающиеся);
			ТабДок.Вывести(ОбластьОбучающиеся, ВыборкаОбучающиеся.Уровень());
		КонецЦикла;

		Подвал.Параметры.Заполнить(Выборка);
		ТабДок.Вывести(Подвал);

		ВставлятьРазделительСтраниц = Истина;
	КонецЦикла;
	//}}
КонецПроцедуры
